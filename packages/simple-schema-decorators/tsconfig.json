{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "allowJs": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  }
}
